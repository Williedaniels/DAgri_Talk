# D'Agri Talk Production Environment Configuration
COMPOSE_PROJECT_NAME=dagri-talk-prod
COMPOSE_FILE=docker-compose.prod.yml

# Database Configuration (use cloud database)
DATABASE_URL=postgresql://username:password@your-db-host:5432/dagri_talk_prod

# Redis Configuration (use cloud redis)
REDIS_URL=redis://your-redis-host:6379/0

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key
JWT_SECRET_KEY=your-jwt-secret-production-key

# Frontend Configuration
REACT_APP_API_URL=https://your-api-domain.com/api